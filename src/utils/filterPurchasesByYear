// Utility function to filter purchases by year
export interface Purchase {
  date: string; // ISO format
  price: number;
}

export function filterPurchasesByYear(
  purchases: Purchase[],
  fromYear: number | null,
  toYear: number | null
): Purchase[] {
  return purchases.filter((purchase) => {
    const year = new Date(purchase.date).getFullYear();
    if (fromYear !== null && year < fromYear) return false;
    if (toYear !== null && year > toYear) return false;
    return true;
  });
}